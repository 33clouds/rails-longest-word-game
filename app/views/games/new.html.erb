<ul>
  <%@letters.each do |letter| %>
    <li><%=letter %></li>
  <% end %>
</ul>

<form action="/score" method="post" data-turbo="false" class="form-inline">
  <div class="input-group mb-3">
    <label class="form-label">What is the longest word you can find?</label>
    <input type="text" name="guess" class="form-control">
    <input type="submit" value="Play" class="btn btn-light">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters.join %>
  <!-- ... -->
</form>
